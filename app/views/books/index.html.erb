<h1>Books</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-4" >
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book'%>
      <% end %>
    </div>
    
    <div class="col-lg-8">
    <table class "table table-striped">
<%= @books.each do |book| %>
<div>
  <p>Title:<%= book.title %></p>
  <p>Opinion:<%= book.body %></p>
</div>
<% end %>
</table>
</div>
</div>
</div>